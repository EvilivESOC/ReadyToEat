




<div class="container text-center" >
    <h1>Pagina de Registro de Menu</h1>
    	<div class="row" >
			<div class="col-6 col-md-offset-3" style="margin:0 auto">
				<div class="panel panel-login"> 
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<button id="login-form-link" class="btn btn-register"><a asp-area="" asp-controller="Confirmaciones" asp-action="PrincipalDeRestaurantes">Atras</a></button>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                                @Html.ValidationSummary()
								<form id="login" asp-action="RegistroMenu" method="post" role="form" style="display: block;">
									<div class="form-group row">
                                        <label for="nombre" class="col-sm-2 col-form-label">Nombre del Plato :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="nombre" id="nombre" tabindex="1" class="form-control" placeholder="Nombre del Propietario" value="">
                                        </div>
                                        </div>
                                    <div class="form-group row">
										<label for="precio" class="col-sm-2 col-form-label">Precio :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="precio" id="precio" tabindex="1" class="form-control" placeholder="Telefono" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
                                        <label for="imagen" class="col-sm-2 col-form-label">Imagen Referencial :</label>
                                        <div class="col-sm-10">
                                        <input type="file" class="form-control-file" id="imagen">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="descripcion" class="col-sm-2 col-form-label">Descripcion :</label>
                                        <div class="col-sm-10">
                                             <textarea class="form-control" name="descripcion" id="descripcion" rows="3" placeholder="Descripcion" value=""></textarea>
                                        </div>
									<div class="form-group row">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register" id="register" tabindex="4" class="form-control btn btn-register" value="Agregar">
											</div>
										</div>
									</div>
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

