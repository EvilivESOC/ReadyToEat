
@model RegistroRest 
<div class="container text-center" >
    <h1>Pagina de Registro de Restaurantes</h1>
    	<div class="row" >
			<div class="col-6 col-md-offset-3" style="margin:0 auto">
				<div class="panel panel-login"> 
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<button id="login-form-link" class="btn btn-register"><a asp-area="" asp-controller="Restaurantes" asp-action="LoginRestaurantes">Inicia Sesion</a></button>
							</div>
							<div class="col-xs-6">
								<button id="register-form-link" class="btn btn-register"><a asp-area="" asp-controller="Restaurantes" asp-action="RegistroRestaurante">Registra tu Restaurante</a></button>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                               
								<form id="login" action="~/Restaurantes/RegistroRestaurante" method="post" role="form" style="display: block;">
                                     @Html.ValidationSummary()
									<div class="form-group row">
                                        <label for="name" class="col-sm-2 col-form-label">Nombre :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="name" id="name" tabindex="1" class="form-control" placeholder="Nombre del Propietario" value="">
                                        </div>
										
									</div>
                                     <div class="form-group row">
                                        <label for="apellido" class="col-sm-2 col-form-label">Apellido :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="apellido" id="apellido" tabindex="1" class="form-control" placeholder="Apellido del Propietario" value="">
                                        </div>
                                    </div>
                                     <div class="form-group row">
										<label for="username" class="col-sm-2 col-form-label">Usuario :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
                                        </div>
									</div>
									<div class="form-group row">
										<label for="email" class="col-sm-2 col-form-label">Email :</label>
                                        <div class="col-sm-10">
                                            <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="telefono" class="col-sm-2 col-form-label">Telefono :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="telefono" id="telefono" tabindex="1" class="form-control" placeholder="Telefono" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="nomnbretienda" class="col-sm-2 col-form-label">Nomb del Restaurant :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="nombretienda" id="nombretienda" tabindex="1" class="form-control" placeholder="Nombre de Restaurante" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
                                        <label for="imagen" class="col-sm-2 col-form-label">Imagen Referencial :</label>
                                        <div class="col-sm-10">
                                        <input type="file" class="form-control-file" id="imagen">
                                        </div>
                                    </div>
                                    <div class="form-group row">
										<label for="direccion" class="col-sm-2 col-form-label">Direccion :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="direccion" id="direccion" tabindex="1" class="form-control" placeholder="Direccion" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="ruc" class="col-sm-2 col-form-label">RUC :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="ruc" id="ruc" tabindex="1" class="form-control" placeholder="RUC" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
                                        <label for="descripcion" class="col-sm-2 col-form-label">Descripcion :</label>
                                        <div class="col-sm-10">
                                             <textarea class="form-control" name="descripcion" id="descripcion" rows="3" placeholder="Descripcion" value=""></textarea>
                                        </div>
                                       
                                     </div>
									<div class="form-group row">
										<label for="password1" class="col-sm-2 col-form-label">Contraseña:</label>
                                        <div class="col-sm-10">
                                            <input type="password" name="password1" id="password1" tabindex="1" class="form-control" placeholder="Contraseña" value="">
                                        </div>
									</div>
									<div class="form-group row">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Crear cuenta">
											</div>
										</div>
									</div>
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>



