@model comentario

<div class="container text-center" >
    <h1>Pagina de Comentarios</h1>
    	<div class="row" >
			<div class="col-6 col-md-offset-3" style="margin:0 auto">
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                               
								<form id="login" action="~/Inicio/Comentarios" method="post" role="form" style="display: block;">
                                     @Html.ValidationSummary()
									<div class="form-group row">
                                        <label for="asunto" class="col-sm-2 col-form-label">Asunto :</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="asunto" id="asunto" tabindex="1" class="form-control" placeholder="Asunto" value="">
                                        </div>
										
									</div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Restaurant :</label>
                                         <div class="col-sm-10">
                                            <select class="form-control" asp-for="RegistroRestId" asp-items="ViewBag.Registro"></select>
                                       </div>
										
									</div>

                                    <div class="form-group row">
                                        <label for="detalle" class="col-sm-2 col-form-label">Detalle :</label>
                                        <div class="col-sm-10">
                                             <textarea class="form-control" name="detalle" id="detalle" rows="3" placeholder="Detalle" value=""></textarea>
                                        </div>
									<div class="form-group row">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Enviar">
											</div>
										</div>
									</div>
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
